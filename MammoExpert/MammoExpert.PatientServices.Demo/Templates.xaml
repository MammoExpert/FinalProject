<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:MammoExpert.PatientServices.UI.Controls.View;assembly=MammoExpert.PatientServices.UI.Controls"
    xmlns:viewModel="clr-namespace:MammoExpert.PatientServices.UI.Controls.ViewModel;assembly=MammoExpert.PatientServices.UI.Controls">


    <DataTemplate DataType="{x:Type viewModel:ManualInputViewModel}">
        <view:UcManualInput />
    </DataTemplate>


    <DataTemplate DataType="{x:Type viewModel:PatientSearchViewModel}">
        <view:UcPatientSearch />
    </DataTemplate>

    <!--<Style x:Key="WorkspaceStyle" TargetType="{x:Type ContentControl}">
       <Setter Property="IsTabStop" Value="False" />
