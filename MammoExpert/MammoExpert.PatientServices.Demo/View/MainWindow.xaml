<Window
    x:Class="MammoExpert.PatientServices.Demo.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MammoExpert.PatientServices.Demo.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Выбор пациента"
    Width="600"
    Height="400"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ThreeDBorderWindow"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Grid.Column="0">
            <MenuItem Command="{Binding OpenSourcesWindow}" Header="Источник данных" />
            <MenuItem Command="{Binding OpenAboutProgrammWindow}" Header="О программе" />
        </Menu>

        <TabControl
            Grid.Row="1"
            Grid.Column="0"
            ItemsSource="{Binding Path=Tabs, Mode=TwoWay}" />

    </Grid>
</Window>
